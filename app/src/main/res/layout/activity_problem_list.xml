<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cl_easy"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/tv_easy_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Problems"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@id/cl_easy"
        app:layout_constraintStart_toStartOf="@id/cl_easy" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_problems"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@+id/tv_easy_title" />
</android.support.constraint.ConstraintLayout>